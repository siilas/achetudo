{% extends 'base.html.twig' %}

{% block body %}
    <div class="row topo">
        <div class="col-md-6">
            <img src="img/logo.png" class="img-responsive pull-right" alt="Ache tudo!">
        </div>
        <div class="col-md-6">
            <form class="campo-busca" action="buscar">
                <div class="input-group input-group-lg">
                    <input type="text" class="form-control col-sm-10" name="q" placeholder="O que você está buscando?" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <p class="lead msg">Hey, aqui no ache tudo! você encontra aquela empresa que estava procurando. Dê uma olhada, é fácil!</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3 rodape">
            <img src="img/logo2.png" alt="Ache tudo!">
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .topo {
            padding-top: 2.5rem !important;
            padding-bottom: 2.5rem !important;
            height: 250px !important;
        }

        .campo-busca {
            width: 90% !important;
            padding-top: 2.5rem !important;
        }

        .msg {
            text-align: center;
        }

        .rodape {
            text-align: center;
        }
    </style>
{% endblock %}
